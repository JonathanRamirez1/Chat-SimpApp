<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        tools:context=".view.fragments.SearchBarFragment">

        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/searchBar"
            style="@style/MaterialSearchBarLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mt_backIconTint="@color/colortTextBlack"
            app:mt_clearIconTint="@color/colortTextBlack"
            app:mt_hint="Texto de busqueda"
            app:mt_hintColor="@color/colortTextBlack"
            app:mt_textColor="@color/colortTextBlack"
            app:mt_leftTextSelectorTint="@color/colortTextBlack"
            app:mt_maxSuggestionsCount="10"
            app:mt_placeholder="Search..."
            app:mt_placeholderColor="@color/colortTextBlack"
            app:mt_searchBarColor="@color/colorPrimary"
            app:mt_searchIconTint="@color/colortTextBlack">

        </com.mancj.materialsearchbar.MaterialSearchBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        android:background="@color/colorAccentDark">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFindUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

    </LinearLayout>
    </FrameLayout>
</layout>