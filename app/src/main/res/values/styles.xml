<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:editTextColor">@color/text_color_white</item>

        <item name="android:windowNoTitle">true</item>
    </style>

        <style name="NoPreview" parent="AppTheme">
            <item name="android:windowDisablePreview">true</item>
        </style>

    <style name="custom_rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_custom</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <!-- Custom Spots progress dialog -->
    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@style/CustomText</item>
        <item name="DialogTitleText">@string/alert_dialog_title_wait</item>
        <item name="DialogSpotColor">@color/primary</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="CustomText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:windowBackground">@drawable/background_ripple_primary</item>
    </style>

</resources>